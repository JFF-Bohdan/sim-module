[flake8]
exclude =
	.build,
	.git,
	.idea,
	__pycache__,
	__init__.py,
max-line-length = 150
max-complexity = 10
filename = *.py
format = default
inline-quotes = "
ignore =
	# E221 multiple spaces before operator
	E221,
	# whitespace before ':'
	E203,
	# whitespace before ')'
	E202,
	# multiple spaces after ','
	E241,
	# unexpected spaces around keyword / parameter equals
	E251,
	#comparison to True should be 'if cond is True:' or 'if cond (it's needed for SQLAlchemy)
	E712



